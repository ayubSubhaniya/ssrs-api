extends layout
block content
    .main.container
        .row
            .col-md-6.col-md-offset-4
                h1.display-4.m-b-2 Reset Password
                br
    form(method='POST')
        .container.d-flex
            .col-sm-5.col-md-offset-3
                .form-group
                    label(for='password') New Password
                    input#password.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
                .form-group
                    label(for='confirm') Confirm Password
                    input#confirm.form-control(type='password', name='confirm', value='', placeholder='Confirm password')
                .form-group
                    button.btn.btn-primary(type='submit') Update Password



